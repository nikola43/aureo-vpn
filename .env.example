# Aureo VPN Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=aureo_vpn
DB_SSL_MODE=disable

# ============================================
# JWT Configuration
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# API Gateway Configuration
# ============================================
PORT=8080

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# VPN Node Configuration
# ============================================
# Set this when running a VPN node
NODE_ID=

# ============================================
# Monitoring Configuration
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ============================================
# Security Configuration
# ============================================
# Enable rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# Enable CORS
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# Production Settings
# ============================================
ENVIRONMENT=development
# Options: development, staging, production

# TLS Configuration (production only)
TLS_ENABLED=false
TLS_CERT_PATH=/etc/ssl/certs/aureo-vpn.crt
TLS_KEY_PATH=/etc/ssl/private/aureo-vpn.key
